---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <style is:global>
        :root {
            --primary-color: #000;
            --secondary-color: #fff;
            --accent-color: #444;
            --bg-light: #f5f5f5;
            --transition-speed: 0.3s;
        }
        
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            color: var(--primary-color);
            background-color: var(--secondary-color);
            font-size: 14px;
            line-height: 1.6;
        }
        
        h1 {
            font-size: 28px;
            margin-bottom: 20px;
            border-bottom: 2px solid var(--primary-color);
            padding-bottom: 10px;
            text-align: center;
        }
        
        h2 {
            font-size: 22px;
            margin-top: 30px;
            margin-bottom: 15px;
            position: relative;
            display: inline-block;
        }
        
        h2::after {
            content: '';
            position: absolute;
            left: 0;
            bottom: -5px;
            width: 100%;
            height: 2px;
            background-color: var(--primary-color);
        }
        
        h3 {
            font-size: 18px;
            margin: 0;
        }
        
        h4 {
            font-size: 16px;
            margin-top: 15px;
            margin-bottom: 10px;
        }
        
        p, ul {
            font-size: 14px;
            margin-bottom: 15px;
        }
        
        footer {
            margin-top: 30px;
            padding-top: 15px;
            border-top: 1px solid #ddd;
            font-style: italic;
            font-size: 13px;
        }
        
        .section-title {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .title-link {
            margin-left: 10px;
            font-size: 14px;
            color: #444;
            text-decoration: none;
            padding: 2px 8px;
            border-radius: 4px;
            background-color: #eee;
            transition: all var(--transition-speed);
            display: flex;
            align-items: center;
        }
        
        .title-link:hover {
            background-color: #ddd;
            color: #000;
        }
        
        .title-link svg {
            margin-right: 4px;
            width: 16px;
            height: 16px;
        }
        
        .title-wrapper {
            display: flex;
            align-items: center;
            flex-grow: 1;
            overflow: hidden;
        }
        
        @media (max-width: 600px) {
            body {
                padding: 15px;
            }
            
            h1 {
                font-size: 24px;
            }
            
            h2 {
                font-size: 20px;
            }
            
            h3 {
                font-size: 16px;
            }
        }
    </style>
</head>
<body>
    <slot />
</body>
</html> 